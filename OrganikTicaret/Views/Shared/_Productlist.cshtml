
@using OrganikTicaret.Models
@model IEnumerable<ProductModel>

<div class="row">
    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top" src="/Upload/@urun.Image" alt="@urun.Name">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/Details/@urun.Id"> @urun.Name</a>
                    </h4>
                    <p class="card-text pt-2 description">
                        @urun.Description
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price ">
                        <i class="fas fa-lira-sign " style="font-size: 20px;"></i>
                        @urun.Price
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-warning btn-sm float-right ">

                        <i class="fas fa-chevron-right" style="font-size: 15px;"></i>
                        Ürünü İncele
                    
                    </a>
                </div>
            </div>
        </div>
    }
</div>
