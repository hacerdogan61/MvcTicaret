@using System.Net.Configuration
@using OrganikTicaret.Models
@model IEnumerable<ProductModel>


@{
    ViewBag.Title = "List";
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="bd-example">
                @Html.Action("GetCategory","Home")
            </div>
        </div>
     
        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning " style="height: 50px; width: 100%;"role="alert">
                    <i class="fas fa-exclamation-circle" style="font-size:20px;"></i>
                    Bu Kategoride Ürün Bulunamadı.
                </div>
            }
            else
            {
                <div class="alert alert-warning text-muted" style="height: 50px; width: 100%;"role="alert">
                    <i class="far fa-check-circle" style="font-size: 20px;"></i>
                    <strong> @Model.Count() adet</strong> ürün bulunmaktadır.
                </div>
         
            }
            @Html.Partial("_Productlist", Model)
        </div>

    </div>
</div>