@using OrganikTicaret.Entity
@model Products
@{
    ViewBag.Title = "Details";
}
<div id="product-detail" class="container pb-5">
    <div class="row mt-1">
        <div class="col-md-6 ">
            <img src="~/Upload/@Model.Image " class="fluid rounded" style="height: 100%; width:100%;" />
        </div>
        <div class="col-md-6 ">
            <div class="row mt-1">
                <div class="col-md-12 ">
                    <h1 class="text-dark">@Model.Name</h1>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12 ">
                    <span class="badge badge-warning">@Model.Stock</span>
                    <span class="product-number">#5651548</span>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12 ">
                    <div id="description">
                        @Model.Description
                    </div>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-4 ">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star-half-alt" aria-hidden="true"></i>
                    @if (Model.IsApproved )
                    {
                        <span class="badge badge-success">Stokta</span>
                    }
                    @if (Model.IsApproved == false)
                    {
                        <span class="badge badge-success">Stokta Yok</span>
                    }

                </div>
                <div id="write-review" class="col-md-4 pl-5">
                    <a href="#">yorumlar</a>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12 ">
                    <h4 id="product-price">@Model.Price TL</h4>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12 ">
                    <button class="btn btn-success">
                        <i class="fas fa-cart-plus" aria-hidden="true"> Add To Cart</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-12">
